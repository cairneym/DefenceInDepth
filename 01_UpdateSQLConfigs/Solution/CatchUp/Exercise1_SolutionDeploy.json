{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion":"1.0.0.0",
    "parameters": {
        "randomiser": {
            "type": "string",
            "metadata": {
                "description": "A 5 character string to append to the SQL Server and VM DNS names to make them globally unique"
            }
        },
        "vmName": {
            "type": "string",
            "metadata": {
                "description": "The name of the Virtual Machine"
            }
        },
        "sqlServerName": {
            "type": "string",
            "metadata": {
                "description": "The name of the SQL Server"
            }
        },
        "sqlAdminLogin": {
            "type": "string",
            "metadata": {
                "description": "The SQL Server Administrator login account"
            }
        },
        "sqlAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the SQL Server administrator login"
            }
        },
        "vmAdminLogin": {
            "type": "string",
            "metadata": {
                "description": "The VM Administrator login account"
            }
        },
        "vmAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The password for the VM administrator login"
            }
        },
        "scriptURL": {
            "type": "string",
            "metadata": {
                "description": "The URL to where the custom install script can be found"
            }
        },
        "adGroupSID": {
            "type": "string",
            "metadata": {
                "description": "The Azure Active Directory ObjectID of the SQLAdmins Group to set as Administrators"
            }
        }
    },
    "variables": {
        "vmPublicIPAddress": "[concat(parameters('vmName'),'-PublicIP')]",
        "vmNSG": "[concat(parameters('vmName'), '-nsg')]",
        "vmNIC": "[concat(parameters('vmName'), '-nic')]",
        "databaseName":"AdventureWorksLT",
        "uniqueSQLName": "[concat(parameters('sqlServerName'), '-', parameters('randomiser'))]",
        "uniqueVMName":"[concat(parameters('vmName'), '-', parameters('randomiser'))]",
        "scriptFileName": "[substring(parameters('scriptURL'), add(lastIndexOf(parameters('scriptURL'), '/'),1))]"
    },
    "resources": [
            {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2020-05-01",
            "name": "[variables('vmNSG')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "event": "NDC Melbourne",
                "deleteAfter": "2020-08-01",
                "displayName": "Virtual Network NSG"
            },
            "properties": {
                "securityRules": [
                    {
                        "name": "AllowRDP",
                        "properties": {
                            "description": "description",
                            "protocol": "Tcp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Inbound",
                            "sourcePortRanges": [],
                            "destinationPortRanges": [],
                            "sourceAddressPrefixes": [],
                            "destinationAddressPrefixes": []
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2020-05-01",
            "name": "[variables('vmPublicIPAddress')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "event": "NDC Melbourne",
                "deleteAfter": "2020-08-01",
                "displayName": "PublicIPAddress"
            },
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[toLower(variables('uniqueVMName'))]"
                },
                "ipTags": []
            }
        },
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2019-06-01-preview",
            "name": "[variables('uniqueSQLName')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "event": "NDC Melbourne",
                "deleteAfter": "2020-08-01",
                "displayName": "ndc-sql-mhc68"
            },
            "kind": "v12.0",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "administratorLogin": "[parameters('sqlAdminLogin')]",
                "administratorLoginPassword": "[parameters('sqlAdminPassword')]",
                "minimalTlsVersion": "1.2",
                "publicNetworkAccess": "Enabled"
            },
            "resources": [
                {
                    "type": "Microsoft.Sql/servers/providers/locks",
                    "apiVersion": "2016-09-01",
                    "name": "[concat(variables('uniqueSQLName'), '/Microsoft.Authorization/SQLDeleteLock')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', variables('uniqueSQLName'))]"
                    ],
                    "properties": {
                        "level": "CanNotDelete",
                        "notes": "SQL Server should not be deleted."
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-07-01",
            "name": "[variables('uniqueVMName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('vmNIC'))]"
            ],
            "tags": {
                "event": "NDC Melbourne",
                "deleteAfter": "2020-08-01",
                "displayName": "ndc-ssms-mhc68"
            },
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_B2s"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2019-Datacenter",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "StandardSSD_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[variables('uniqueVMName')]",
                    "adminUsername": "[parameters('vmAdminLogin')]",
                    "adminPassword": "[parameters('vmAdminPassword')]",
                    "windowsConfiguration": {
                        "provisionVMAgent": true,
                        "enableAutomaticUpdates": true
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('vmNIC'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "Microsoft.Compute/virtualMachines/providers/locks",
                    "apiVersion": "2016-09-01",
                    "name": "[concat(variables('uniqueVMName'), '/Microsoft.Authorization/VMDeleteLock')]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', variables('uniqueVMName'))]"
                    ],
                    "properties": {
                        "level": "CanNotDelete",
                        "notes": "Virtual Machine should not be deleted."
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2019-07-01",
            "name": "[concat(variables('uniqueVMName'), '/installSSMS')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines', variables('uniqueVMName'))]"
            ],
            "tags": {
                "event": "NDC Melbourne",
                "deleteAfter": "2020-08-01",
                "displayName": "InstallSSMS on Windows VM"
            },
            "properties": {
                "autoUpgradeMinorVersion": true,
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.10",
                "settings": {
                    "fileUris": [
                        "[parameters('scriptURL')]"
                    ],
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -File ', variables('scriptFileName'))]"
                },
                "protectedSettings": {}
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups/securityRules",
            "apiVersion": "2020-05-01",
            "name": "[concat(variables('vmNSG'), '/AllowRDP')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('vmNSG'))]"
            ],
            "properties": {
                "description": "description",
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "3389",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 100,
                "direction": "Inbound",
                "sourcePortRanges": [],
                "destinationPortRanges": [],
                "sourceAddressPrefixes": [],
                "destinationAddressPrefixes": []
            }
        },
        {
            "type": "Microsoft.Sql/servers/administrators",
            "apiVersion": "2019-06-01-preview",
            "name": "[concat(variables('uniqueSQLName'), '/ActiveDirectory')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', variables('uniqueSQLName'))]"
            ],
            "properties": {
                "administratorType": "ActiveDirectory",
                "login": "SQLAdmins",
                "sid": "[parameters('adGroupSID')]"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2020-05-01",
            "name": "NDC-VirtualNetwork",
            "location": "australiaeast",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('vmNSG'))]"
            ],
            "tags": {
                "event": "NDC Melbourne",
                "deleteAfter": "2020-08-01",
                "displayName": "NDC-VirtualNetwork"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "10.0.0.0/16"
                    ]
                },
                "subnets": [
                    {
                        "name": "Client-Subnet",
                        "properties": {
                            "addressPrefix": "10.0.0.0/24",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('vmNSG'))]"
                            },
                            "serviceEndpoints": [
                                {
                                    "service": "Microsoft.Sql",
                                    "locations": [
                                        "[resourceGroup().location]"
                                    ]
                                }
                            ],
                            "PrivateEndpointNetworkPolicies": "Disabled",
                            "PrivateLinkServiceNetworkPolicies": "Disabled"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Sql/servers/databases",
            "apiVersion": "2019-06-01-preview",
            "name": "[concat(variables('uniqueSQLName'), '/', variables('databaseName'))]",
            "location": "australiaeast",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', variables('uniqueSQLName'))]"
            ],
            "tags": {
                "event": "NDC Melbourne",
                "deleteAfter": "2020-08-01",
                "displayName": "Sample Database"
            },
            "sku": {
                "name": "Basic",
                "tier": "Basic",
                "capacity": 5
            },
            "kind": "v12.0,user",
            "properties": {
                "createMode": "Default",
                "collation": "SQL_Latin1_General_CP1_CI_AS",
                "maxSizeBytes": 104857600,
                "sampleName": "AdventureWorksLT",
                "catalogCollation": "SQL_Latin1_General_CP1_CI_AS",
                "zoneRedundant": false,
                "licenseType": "LicenseIncluded",
                "storageAccountType": "GRS"
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2020-05-01",
            "name": "[concat('NDC-VirtualNetwork', '/Client-Subnet')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', 'NDC-VirtualNetwork')]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('vmNSG'))]"
            ],
            "properties": {
                "addressPrefix": "10.0.0.0/24",
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('vmNSG'))]"
                },
                "serviceEndpoints": [
                    {
                        "service": "Microsoft.Sql",
                        "locations": [
                            "[resourceGroup().location]"
                        ]
                    }
                ],
                "PrivateEndpointNetworkPolicies": "Disabled",
                "PrivateLinkServiceNetworkPolicies": "Disabled"
            }
        },
        {
            "type": "Microsoft.Sql/servers/virtualNetworkRules",
            "apiVersion": "2015-05-01-preview",
            "name": "[concat(variables('uniqueSQLName'), '/ClientSubnet')]",
            "dependsOn": [
                "[resourceId('Microsoft.Sql/servers', variables('uniqueSQLName'))]",
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'NDC-VirtualNetwork', 'Client-Subnet')]"
            ],
            "properties": {
                "virtualNetworkSubnetId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'NDC-VirtualNetwork', 'Client-Subnet')]",
                "ignoreMissingVnetServiceEndpoint": true
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2020-05-01",
            "name": "[variables('vmNIC')]",
            "location": "australiaeast",
            "dependsOn": [
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('vmPublicIPAddress'))]",
                "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'NDC-VirtualNetwork', 'Client-Subnet')]",
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('vmNSG'))]"
            ],
            "tags": {
                "event": "NDC Melbourne",
                "deleteAfter": "2020-08-01",
                "displayName": "windowsVM Network Interface"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipConfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('vmPublicIPAddress'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'NDC-VirtualNetwork', 'Client-Subnet')]",
                                "properties": {
                                    "PrivateEndpointNetworkPolicies": "Disabled",
                                    "PrivateLinkServiceNetworkPolicies": "Disabled"
                                }
                            }
                        }
                    }
                ],
                
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('vmNSG'))]"
                }
            }
        }
    ],
    "outputs": {
        "SQL Server Name": {
            "type": "string",
            "value": "[variables('uniqueSQLName')]"
        },
        "Virtual Machine Name": {
            "type": "string",
            "value": "[variables('uniqueVMName')]"
        }
    }
}
